{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "jsx": "never",
                "ts": "never",
                "tsx": "never"
            }
        ],
        "prefer-destructuring": [
            "error",
            {
                "array": false,
                "object": true
            }
        ],
        "no-prototype-builtins": 1,
        "@typescript-eslint/no-non-null-assertion": 0,
        "@typescript-eslint/explicit-module-boundary-types": 0,
        "no-shadow": "off", // https://stackoverflow.com/a/63961972/7886229
        "@typescript-eslint/no-shadow": ["error"],
        "@typescript-eslint/no-explicit-any": "off",
        "no-use-before-define": "off", // https://stackoverflow.com/a/64024916/7886229
        "@typescript-eslint/no-use-before-define": ["error"],
        "import/no-extraneous-dependencies": [
            "error",
            { "devDependencies": true }
        ],
        "camelcase": [
            "error",
            { "ignoreImports": true, "properties": "never" }
        ],
        "no-param-reassign": ["error", { "props": false }],
        "no-underscore-dangle": "off",
        "@typescript-eslint/ban-ts-comment": "off", // why in fucks name would anyone want to use this?,
        "no-bitwise": "off",
        "no-useless-constructor": "off",
        "@typescript-eslint/no-useless-constructor": "error",
        "max-classes-per-file": "off"
    },
    "ignorePatterns": ["**/build/*"]
}
