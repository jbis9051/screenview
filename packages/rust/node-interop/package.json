{
  "name": "node-interop",
  "version": "0.0.0",
  "main": "build/index.js",
  "scripts": {
    "rust-build": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "rust-build-debug": "yarn rust-build --",
    "rust-build-release": "yarn rust-build -- --release",
    "ts-build": "tsc index.ts --declaration --outDir build",
    "build-debug": "yarn rust-build-debug && yarn ts-build",
    "build": "yarn rust-build-release && yarn ts-build",
    "install": "yarn build",
    "test": "cargo test"
  },
  "devDependencies": {
    "cargo-cp-artifact": "^0.1",
    "typescript": "^4.6.3"
  }
}